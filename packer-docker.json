{
    "builders":[{
        "type": "docker",
        "image": "ubuntu",
        "export_path": "image.tar"
    }],
    "provisioners":[
        {
            "type": "shell",
            "inline": ["apt-get -y update; apt-get install -y sudo puppet-common"]
        },
        {
            "type": "puppet-masterless",
            "manifest_file": "manifests/default.pp"
        }
    ],
    "post-processors": [
        {
            "type": "docker-import",
            "repository": "refinery/springboot-api-microservice",
            "tag": "0.1"
        }
    ]
}
